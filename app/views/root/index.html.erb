<h2>Add Todo</h2>

    <form action="add" method="post">
        <%= token_tag %>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>

        <br>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>

        <br>

        <input type="submit" value="Add Todo">
    </form>

    <form class="search-form" action="search_input" method = "get">
    <input type="text" class="search-input" placeholder="Search your title here" name="search_input">
    <button type="submit" class="search-button">Search</button>
  </form>
    
    <% @posts.each do |item| %>

        <div class="card">

           <h2><%= item.title %></h2>
           <p><%= item.description %></p>
    
          <div class="button-container">
              <a href="/update/<%= item.id %>" data-method="update" class="button">Update</a>
              <a href="/delete/<%= item.id %>" data-method="delete"  class="button delete">Delete</a>
          </div>

        </div>
        
    <% end %>